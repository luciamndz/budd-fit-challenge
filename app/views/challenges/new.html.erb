<div class="container p-4 d-flex justify-content-center">
  <div class="shadow-lg border border-light">
    <div class="m-3">
      <h2>Create your own challenge!</h2>
      <%= simple_form_for @challenge do |f| %>
        <%= f.input :name, prompt: "Challenge Name"%>
        <%= f.input :challenge_type, collection: Challenge::TYPES, prompt: "Select privacy setting" %>
        <%= f.input :activity, collection: Challenge::ACTIVITIES, prompt: "Select an activity" %>
        <%= f.input :status, as: :hidden, input_html: { value: "created" } %>
        <%= f.input :user_id, as: :hidden, input_html: { value: current_user.id } %>
        <%= f.input :start_date, as: :string, input_html: {data: {controller: "datepicker"}}%>
        <%= f.input :end_date, as: :string, input_html: {data: {controller: "datepicker"}}%>
        <%= f.button :submit, "Create challenge", class: "btn btn-warning" %>

      <% end %>
    </div>
  </div>
</div>
