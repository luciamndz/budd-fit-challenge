<div class="buddies-card my-3" style="width: 35rem;">
    <div class="buddies-card-title">
      <h2 id="buddies">BUDDIES</h2>
    </div>
    <div class="row buddies">
      <% @challenge.challenge_infos.where(user_status: "active").each do |challenge_info| %>
        <div class="col-md-3">
          <div class="card-body p-3">
            <div class="avatar-container">
              <%= cl_image_tag challenge_info.user.photo.key, class: "avatar rounded-circle", id: "img-card", data: { score: challenge_info.user_score } %>
              <div class="avatar-overlay">
                <span class="score"><%= challenge_info.user_score %></span>
              </div>
            </div>
            <div class="buddies-card-text text-center">
              <p><%= challenge_info.user.nickname %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
